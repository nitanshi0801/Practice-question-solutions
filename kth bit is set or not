class CheckBit
{
    // Function to check if Kth bit is set or not.
    static boolean checkKthBit(int n, int k)
    {
        // Your code here
        String bin = Integer.toBinaryString(n);
        if(k >= bin.length()) return false;
        return (bin.charAt(bin.length()-k-1) == '1')? true :false;
    
    }
    
    
}
